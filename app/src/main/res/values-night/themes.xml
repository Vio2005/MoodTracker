<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Daily_Mood" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <style name="Theme.DailyMood" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dark primary colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/black</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>

        <!-- RadioButton for dark mode -->
        <item name="radioButtonStyle">@style/CustomRadioButtonDark</item>
    </style>

    <!-- Dark version of RadioButton -->
    <style name="CustomRadioButtonDark" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>