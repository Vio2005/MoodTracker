<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp">

        <!-- Back Icon -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/back_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_button"
            android:textColor="@color/white"
            
            />

        <!-- Centered Title -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"

            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:fontFamily="@font/corben_regular"
            android:textColor="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Background Image -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/setbg"
        android:contentDescription="background"
        android:alpha="0.9" />

    <!-- Centered Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardEditUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Profile Icon -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/about_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/proicon"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Username"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingBottom="16dp"
                android:fontFamily="@font/corben_regular"/>

            <!-- EditText -->
            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter new username"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="#888888"
                android:fontFamily="@font/corben_regular"/>




        <!-- Save Button -->
            <Button
                android:id="@+id/btnSaveUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:textStyle="bold"
                android:backgroundTint="#621599"
                android:fontFamily="@font/corben_regular"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
