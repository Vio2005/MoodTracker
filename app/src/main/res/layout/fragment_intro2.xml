<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.IntroFragment2">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sadbg"
    android:scaleType="centerCrop"/>
    <!-- Foreground Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"

        android:padding="32dp">

        <!-- Features Image -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp"
            android:adjustViewBounds="true"
            android:contentDescription="Features Icon"
            android:scaleType="fitCenter"
            android:src="@drawable/sad" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/corben_regular"
            android:text="Easy to Use"
            android:textColor="#333333"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/corben_regular"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:text="Add your mood in seconds, add notes, and check your history anytime."
            android:textColor="#555555"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Gender Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/corben_regular"
            android:text="Select Your Gender"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:buttonTint="#FFD54F"
                android:fontFamily="@font/corben_regular"
                android:text="Male"
                android:textColor="#333333"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:buttonTint="#FFD54F"
                android:fontFamily="@font/corben_regular"
                android:text="Female"
                android:textColor="#333333"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/radioOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFD54F"
                android:fontFamily="@font/corben_regular"
                android:text="Other"
                android:textColor="#333333"
                android:textSize="16sp" />
        </RadioGroup>

        <!-- Next Button -->
        <Button
            android:id="@+id/btnNext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="70dp"
            android:paddingEnd="70dp"
            android:text="Next"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/corben_regular"
            app:cornerRadius="0dp"
            app:backgroundTint="#2196F3" />

    </LinearLayout>
</FrameLayout>
